{
	"manifest_version" : 2,

	"name" : "Udacity Global Pause",
	"description" : "Pause Udacity Videos",
	"version" : "0.1",

	"background": {
		"scripts" : ["udacity_pause_background.js"],
		"persistent" : false
	},


	"commands" : {
		"udacity_pause_back" : {
			"suggested_key" : {
				"default": "Ctrl+Shift+8"
			},
			"description": "Seek udacity course viewer backward.",
			"global": true
		},
		"udacity_pause_pause" : {
			"suggested_key" : {
				"default": "Ctrl+Shift+9"
			},
			"description": "Pause any udacity course viewer videos.",
			"global": true
		},
		"udacity_pause_forward" : {
			"suggested_key" : {
				"default": "Ctrl+Shift+0"
			},
			"description": "Seek udacity course viewer forward.",
			"global": true
		}
	},

	"browser_action": {
		"default_icon": {
			"128": "icon128.png"
		}
	},
	"icons": {
		"128" : "icon128.png"
	},



	"content_scripts" : [
		{
			///"matches" : ["<all_urls>"],
			 "matches" : ["*://*.udacity.com/course/viewer/*"],
			"js" : ["udacity_pause_content.js"],
			"run_at" : "document_start",
			"all_frames" : true
		}
	],

	"permissions" : [
		"tabs",
		// "webRequest",
		// "webRequestBlocking",
		// "<all_urls>"
		"*://*.udacity.com/course/viewer/*"
	]
}